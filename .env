# local | dev | staging (node enviroment)
ENVIROMENT=local

# app port (default - 3000)
# APP_PORT=3000

##########################################
########## JWT configuration #############
##########################################

# Access token expiration (30 minutes)
# JWT_ACCESS_EXPIRE=30m
JWT_ACCESS_EXPIRE=1d

# Access token expiration in TIMESTAMP (30 minutes) -- { 30 * 60 * 1000 = 1800000 }
# JWT_ACCESS_EXPIRE_TIMESTAMP=1800000
JWT_ACCESS_EXPIRE_TIMESTAMP=86400000

# Refresh token expiration (1 day)
JWT_REFRESH_EXPIRE=1d

# Refresh token expiration in TIMESTAMP (1 day ) -- { 24 * 60 * 60 * 1000 = 86400000 }
JWT_REFRESH_EXPIRE_TIMESTAMP=86400000

# Refresh token expiration (15 minutes)
JWT_RECOVERY_EXPIRE=15m

# Refresh token expiration in TIMESTAMP (15 minutes ) -- { 15 * 60 * 1000 = 900000 }
JWT_RECOVERY_EXPIRE_TIMESTAMP=900000

# Secret passfrase for encoding
JWT_SECRET=Deuteronomio1-11


##########################################
########## REPOSITORIES #############
##########################################


