##########################################
########## DISABLED_LOGIN #############
##########################################

# Toggle enable(yes) / disable (no) disable login feature
DISABLED_LOGIN=yes

# Disable login attemps
DISABLED_LOGIN_ATTEMPS_ALLOWED=3

# Disabled Login due to failure attemps
# (15 seconds for dev) - 15000
# (30 min for prod) - 1800000
DISABLED_LOGIN_EXPIRE_TIMESTAMP=15000

